<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Amount"
    android:textSize="16sp"
    android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="-"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="1"
        android:textSize="16sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="+"
        android:layout_marginStart="10dp"
        android:textSize="20dp"/>
    </LinearLayout>
        <CheckBox
            android:id="@+id/checkbox_cream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cream"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>
        <CheckBox
            android:id="@+id/checkbox_chocolatechip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chocolate chip"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>
        <CheckBox
            android:id="@+id/checkbox_vanila"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vanila"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btn_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:layout_margin="10dp"
            android:layout_gravity="end"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_thankyou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="Thank You for your order \n The total price is "/>



</LinearLayout>